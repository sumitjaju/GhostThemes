{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}                           
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        <a class="menu-ham ion-android-menu"></a>
        <ul id="dropdown" >
            <a class="ion-close-round" ></a>    
            <li>
                <a href="{{@blog.url}}">{{@blog.description}}</a>
                <span class="logotize">{{@blog.title}}</span>
            </li>
            <li><a href="https://twitter.com/jsumeet" target="_blank">@jsumeet</a></li>
            <li><a href="{{@blog.url}}" target="_blank">sumitjaju.in</a></li>
            <li><a href="mailto:karma@sumitjaju.in?subject=hi Sumit!">say&nbsp;hi</a></li>
            <li><a href="/feed" target="_blank">rss feed</a></li>
            <li><hr class="overlord_nav"></li>
            <li><a href="{{@blog.url}}/aboutus/">about us</a></li>
        </ul>
        <a class="index-Homebutton" href="{{@blog.url}}">
        </a>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            {{#if @blog.logo}}
                <a class="blog-logo" href="{{@blog.url}}">
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                </a>
            {{/if}}
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
            <ul id="user_links">
                <li><a href="/feed" target="_blank">rss feed</a></li>
                <li><a href="mailto:sumeet.jaju@gmail.com?subject=hi there!">say hi</a></li>
                <li><a href="{{@blog.url}}/aboutus/">about</a></li>
            </ul>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>